@{
}

  <div id="login">
        <h3 class="text-center text-white pt-5">Candidate Login</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" asp-action="CLogin" method="post">
                            <h3 class="text-center text-info">Candidate Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Email</label><br>
                                <input type="text" asp-for="C_EMAIL" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password</label><br>
                                <input type="password" asp-for="C_PASSWORD" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <br/>
                                <input type="submit" id="submit" class="btn btn-info btn-md" value="Log In">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>